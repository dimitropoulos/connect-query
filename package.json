{
  "private": true,
  "name": "root",
  "repository": "git@github.com:bufbuild/connect-query.git",
  "scripts": {
    "build": "pnpm --recursive build",
    "generate": "pnpm --recursive generate",
    "test": "pnpm --recursive test",
    "lint": "pnpm run lint:code && pnpm run lint:markdown && pnpm run lint:spelling",
    "lint:fix": "pnpm run lint:code:fix && pnpm run lint:markdown:fix && pnpm run lint:spelling",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules\"",
    "lint:markdown:fix": "markdownlint-cli2-fix \"**/*.md\" \"#**/node_modules\"",

    // this doesn't work because npm linking.  `git ls-files | xargs pnpm vale` is what the author recommends (https://github.com/errata-ai/vale/issues/243) which is :sad-face: because it requires shelling out to both `git` and `xargs`.
    "lint:spelling": "pnpm vale .", // adding `--glob='!node_modules' didn't seem to work either
    "lint:code": "eslint . && prettier . --check",
    "lint:code:fix": "eslint . --fix && prettier . --write",
    "all": "pnpm run build && pnpm run generate && pnpm run lint:fix && pnpm run test"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@jest/globals": "29.3.1",
    "@ocular-d/vale-bin": "^1.10.36",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@typescript-eslint/utils": "5.46.1",
    "@types/node": "^18.11.15",
    "cspell": "6.17.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-jest": "27.1.6",
    "eslint-plugin-jsdoc": "39.6.4",
    "eslint-plugin-notice": "0.9.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "29.3.1",
    "jest-mock": "29.3.1",
    "lerna": "^6.1.0",
    "markdownlint-cli2": "0.5.1",
    "prettier": "2.8.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsdoc-markdown": "0.0.1",
    "typedoc": "0.23.22",
    "typedoc-plugin-markdown": "3.14.0",
    "typescript": "4.9.4"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
